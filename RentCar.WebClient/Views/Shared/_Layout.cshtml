<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentCar.WebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentCar.WebClient.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/burger.css" />
</head>
<body>
    <header>
        <!-- Hamburger Menu -->
    
        <div class="auth-section">
            <button class="hamburger-btn" onclick="toggleMenu()">☰</button>

            <div class="side-menu" id="sideMenu">
                <div class="side-menu-header">
                    <span class="menu-title">Menu</span>
                    <button class="close-btn" onclick="toggleMenu()">✕</button>
                </div>
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("Index", "History")">Riwayat Penyewaan</a>
                <a href="@Url.Action("About", "Home")">Tentang Kami</a>
            </div>

            <div style="flex: 1"></div>

            <div class="side-menu-overlay" id="menuOverlay" onclick="toggleMenu()"></div>
            @{
                var username = User.FindFirst(ClaimTypes.Name)?.Value;  
            }
            @if (!string.IsNullOrEmpty(username))
            {
                <div class="user-info">
                    <span class="user-name">Hello, @username</span>
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                        <button type="submit" class="btn-logout">Sign Out</button>
                    </form>
                </div>
            }
            else
            {
                <div class="auth-buttons">
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-register">Sign Up</a>
                </div>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function toggleMenu() {
        document.getElementById("sideMenu").classList.toggle("show");
        document.getElementById("menuOverlay").classList.toggle("show");
    }

    window.addEventListener("click", function (e) {
        const menu = document.getElementById("hamburgerMenu");
        const button = document.querySelector(".hamburger-btn");

        if (!menu.contains(e.target) && !button.contains(e.target)) {
            menu.classList.remove("show");
        }
    });

</script>
