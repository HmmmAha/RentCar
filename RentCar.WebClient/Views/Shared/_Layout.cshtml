<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentCar.WebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentCar.WebClient.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <header>
        <div class="auth-section">
            @{
                var username = Context.Session.GetString("Name");
            }
            @if (!string.IsNullOrEmpty(username))
            {
                <div class="user-info">
                    <span class="user-name">Hello, @username</span>
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                        <button type="submit" class="btn-logout">Sign Out</button>
                    </form>
                </div>
            }
            else
            {
                <div class="auth-buttons">
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-register">Sign Up</a>
                </div>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RentCar.WebClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
