@model RentCar.WebClient.Models.Auth.LoginViewModel;
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/auth.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="auth-box">
    <h2>Login ke RentCar</h2>

    <form asp-action="Login" method="post">
        <label>Email</label>
        <input asp-for="Email" placeholder="Masukkan email Anda" />
        <span asp-validation-for="Email"></span>

        <label>Password</label>
        <input asp-for="Password" placeholder="Masukkan password Anda" />
        <span asp-validation-for="Password"></span>

        <button type="submit">Login</button>
    </form>

    Belum punya akun? Registrasi
    <a href="@Url.Action("Register", "Account")">disini.</a>
</div>

