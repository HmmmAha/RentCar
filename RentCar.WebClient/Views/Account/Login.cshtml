@model RentCar.WebClient.Models.Auth.LoginViewModel;
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/auth.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="auth-box">
    <h2>Login ke RentCar</h2>

    <form asp-action="Login" method="post">
        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                @ViewBag.Error
            </div>
        }
        <label>Email</label>
        <input asp-for="Email" placeholder="Masukkan email Anda" />
        <span asp-validation-for="Email" class="field-validation-error"></span>

        <label>Password</label>
        <input asp-for="Password" placeholder="Masukkan password Anda" />
        <span asp-validation-for="Password" class="field-validation-error"></span>

        <button type="submit">Login</button>
    </form>

    Belum punya akun? Registrasi
    <a href="@Url.Action("Register", "Account")">disini.</a>
</div>

