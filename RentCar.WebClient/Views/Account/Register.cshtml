@model RentCar.WebClient.Models.Auth.RegisterViewModel;
<link rel="stylesheet" href="~/css/auth.css" />

<h2>Register</h2>

<form asp-action="Register" method="post">
    <input asp-for="Name" placeholder="Name" />
    <span asp-validation-for="Name"></span>

    <input asp-for="Email" placeholder="Email" />
    <span asp-validation-for="Email"></span>

    <input asp-for="Password" type="password" placeholder="Password" />
    <span asp-validation-for="Password"></span>

    <input asp-for="Address" placeholder="Address" />
    <span asp-validation-for="Address"></span>

    <input asp-for="Phone_number" placeholder="Phone Number" />
    <span asp-validation-for="Phone_number"></span>

    <input asp-for="Driver_license_number" placeholder="Driver License Number" />
    <span asp-validation-for="Driver_license_number"></span>

    <button type="submit">Register</button>
</form>
